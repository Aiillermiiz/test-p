<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat_massager">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        android:layout_height="50dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:drawableLeft="@drawable/ic_navigate_before_black_24dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="5dp"
            android:padding="7dp"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="7dp"
            android:drawableLeft="@drawable/ic_videocam_black_24dp"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:padding="7dp"
            android:drawableLeft="@drawable/ic_info_black_24dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/send_mas"
        android:layout_width="220dp"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_tag_faces_black_24dp"
        android:hint="Send massage"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:background="@drawable/btn_sign_in"
        android:layout_marginTop="552dp"/>
    <Button
        android:id="@+id/f_add_cart"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginLeft="330dp"
        android:padding="26dp"
        android:background="@drawable/send_bnt"
        android:drawableLeft="@drawable/ic_send_black_24dp"
        android:layout_marginTop="555dp" />
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/ic_camera_alt_black_24dp"
        android:layout_marginTop="555dp"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ic_insert_photo_black_24dp"
        android:layout_marginTop="555dp"/>
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_mic_black_24dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="555dp"/>
</FrameLayout>