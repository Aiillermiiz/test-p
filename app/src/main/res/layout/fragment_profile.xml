<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/id_profile"
    android:background="#9AE9E9E9"
    android:gravity="center"
    tools:context=".authen">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Name"
        android:textColor="#333399"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="76dp"
        android:background="#ffffff"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/anton"
            android:textColor="#333399"
            android:text="FACEBUCK ;p"
            android:textSize="30dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="40dp"
            android:background="@drawable/cycle_blue"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-14dp"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="40dp"
            android:background="@drawable/cycle_blue"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-12dp"
            android:drawableLeft="@drawable/ic_chat_black_24dp"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        android:layout_height="55dp">

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_home_black_24dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_ondemand_video_black_24dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_notifications_none_black_24dp"/>
        <Button
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:background="#333399"
            android:drawableLeft="@drawable/ic_history_black_24dp"
            android:id="@+id/history"
            android:layout_width="32dp"
            android:padding="0dp"
            android:layout_height="32dp"
            />
        <Button
            android:layout_marginLeft="32dp"
            android:layout_marginTop="12dp"
            android:textColor="#FFFFFF"
            android:background="#333399"
            android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
            android:textStyle="bold"
            android:id="@+id/login_button2"
            android:layout_width="32dp"
            android:padding="4dp"
            android:layout_height="32dp"
            />

    <TextView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/ic_view_headline_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        android:layout_height="55dp">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_account_circle_black_24dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/send_mas"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:drawableRight="@drawable/ic_restore_black_24dp"
        android:hint="คุณกำลังคิดอะไรอยู่"
        android:paddingLeft="15dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="20dp"
        android:background="@drawable/btn_sign_in"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:background="#ffffff"
        android:paddingTop="5dp"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_video_call_black_24dp"
            android:text=" ถ่ายทอดสด   |"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_photo_library_black_24dp"
            android:text=" รูปภาพ        |"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_place_black_24dp"
            android:text=" เช็กอิน"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="0dp">
        <fragment
            android:id="@+id/fragment"
            android:name="com.example.myapprecyclerview.Recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_recycler_view" />

    </FrameLayout>


</LinearLayout>
